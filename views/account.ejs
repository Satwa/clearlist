					<input type="checkbox" name="5" id="5" class="day_checkbox"> <label for="5" class="day_checkbox_label">Friday</label>
					<input type="checkbox" name="6" id="6" class="day_checkbox"> <label for="6" class="day_checkbox_label">Saturday</label>
